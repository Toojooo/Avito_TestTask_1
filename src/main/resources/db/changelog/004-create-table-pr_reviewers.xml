<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="4" author="Koltsov_AE">
        <createTable tableName="pr_reviewers">
            <column name="pr_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="pr_reviewers" columnNames="pr_id, user_id" constraintName="pk_pr_reviewers"/>
        <addForeignKeyConstraint baseTableName="pr_reviewers" baseColumnNames="pr_id"
                                 constraintName="fk_pr_reviewers_pr"
                                 referencedTableName="pr" referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="pr_reviewers" baseColumnNames="user_id"
                                 constraintName="fk_pr_reviewers_user"
                                 referencedTableName="users" referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>